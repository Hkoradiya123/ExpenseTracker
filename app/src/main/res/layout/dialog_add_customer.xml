<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Details"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:hintTextColor="@color/white"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/customerNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/customer_name"
            android:background="@drawable/edittext_backgroud"

            android:textColor="@color/white"
            android:padding="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:hintTextColor="@color/white"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/customerAmountInput"
            android:background="@drawable/edittext_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/customer_amount"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:padding="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/edittext_backgroud"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            app:cornerRadius="24dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/edittext_backgroud"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            app:cornerRadius="24dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            android:layout_marginStart="16dp" /> <!-- Add margin to separate buttons -->

    </LinearLayout>

</LinearLayout>